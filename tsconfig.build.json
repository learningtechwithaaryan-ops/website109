{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "noEmit": false,

    "outDir": "dist",
    "rootDir": ".",

    "module": "CommonJS",
    "moduleResolution": "node",

    "target": "ES2020",

    "allowImportingTsExtensions": false,
    "declaration": false,
    "sourceMap": false
  },

  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client", "node_modules", "dist"]
}

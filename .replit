modules = ["nodejs-20"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev-server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "cloudflare-tunnel"

[[workflows.workflow]]
name = "dev-server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host 0.0.0.0 --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "cloudflare-tunnel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./cloudflared tunnel --no-autoupdate run --token $CLOUDFLARE_TUNNEL_TOKEN"

[workflows.workflow.metadata]
outputType = "console"

[agent]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-25_05"
packages = ["u-root-cmds"]
